<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">
            <ImageView
                android:id="@+id/ivImageOfOrg"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tvOrgLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/ivImageOfOrg"
                android:layout_toRightOf="@id/ivImageOfOrg"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="-0.02"
                android:textColor="#4a4a4a"
                android:textSize="18sp"
                android:textStyle="normal"
                android:clickable="false"
                android:focusable="false"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/tvOrgLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tvOrgLogin"
                android:layout_toEndOf="@id/ivImageOfOrg"
                android:layout_toRightOf="@id/ivImageOfOrg"
                android:clickable="false"
                android:focusable="false"/>
            <TextView
                android:id="@+id/tvOrgUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tvOrgLocation"
                android:layout_toEndOf="@id/ivImageOfOrg"
                android:layout_toRightOf="@id/ivImageOfOrg"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.02"
                android:textColor="#797979"
                android:textSize="16sp"
                android:textStyle="normal"
                android:clickable="false"
                android:focusable="false"/>
</RelativeLayout>